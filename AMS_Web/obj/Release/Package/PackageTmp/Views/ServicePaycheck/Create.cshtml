@model Library.Model.Models.ServicePaycheck

@{
    ViewBag.Title = "Create";
}

@{Html.RenderAction("LoadService", "Service");}

<h2>Create</h2>o++

@using (Html.BeginForm("Create", "ServicePaycheck", FormMethod.Post))
{
    <div class="form-group">
        <label for="exampleInputEmail1">Username</label>
        <input id="username" name="username" type="text" />
        <small id="emailHelp" class="form-text text-muted">Number of room</small>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Service ID</label>        
        <select class="form-control" id="serviceID" name="serviceID" required>
            <option value="" disabled selected hidden>Seclect Room Type</option>
            @foreach (var service in ViewBag.services)
            {
            <option value="@service.ID">@service.Name - 1 / @service.Unit</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Amount</label>
        <input id="amount" name="amount" type="text" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
